&lt;/span&gt;&lt;/span&gt;&lt;span class=&#34;line&#34;&gt;&lt;span class=&#34;cl&#34;&gt;    [&amp;#39;Person&amp;#39;, &amp;#39;Instrument&amp;#39;, &amp;#39;Food1&amp;#39;],
